<Window x:Class="FitnessForBusiness.Design.CurrentTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Title="CurrentTrainingWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/background.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="TrainingNameTextBox" Initialized="TrainingNameTextBox_Initialized" 
         Foreground="#ab5eeb"
         FontWeight="Medium"
         FontSize="15"
         Margin="0,5,0,0"/>
        <ListBox Name="ExcercizesListBox"  Margin="50 70 50 50">
            <ListBox.Background>
                <ImageBrush ImageSource="/Pictures/background.jpg"/>
            </ListBox.Background>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Name="NameTextBlock" Grid.ColumnSpan="2" FontSize="26" FontFamily="Brush Script MT" Margin="10 7 0 3" Initialized="NameTextBlock_Initialized_1"></TextBlock>
                        <Button Width="150" Height="40" VerticalAlignment="Bottom" Margin="50" Content="Показать детали" FontFamily="Calibri" Background="Azure" Click="Button_Click"></Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
