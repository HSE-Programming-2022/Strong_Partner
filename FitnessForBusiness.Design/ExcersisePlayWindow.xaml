<Window x:Class="FitnessForBusiness.Design.ExcersisePlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Title="ExcersisePlayWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/background.jpg"/>
        </Grid.Background>
        <StackPanel Margin="30">
            <MediaElement x:Name="video" 
             
                                          Width="300"
                                          Height="300"
                                          LoadedBehavior="Play">
            </MediaElement>
            <Button x:Name="playVideo" Content="Exit" Margin="0, 20, 0, 0" Click="playVideo_Click"  Width="80" Style="{StaticResource UIButton}"/>
        </StackPanel>
    </Grid>
</Window>
