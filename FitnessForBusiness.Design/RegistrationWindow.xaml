<Window x:Class="FitnessForBusiness.Design.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Height="700" Width="810"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        

        <StackPanel Grid.RowSpan="1" Grid.ColumnSpan="3" Background="#ab5eeb">

            <Button Content="Exit"
                    Name="ExitButton"
                    Foreground="Black"
                    FontSize="10"
                    FontWeight="Medium"
                    HorizontalAlignment="Right"
                    Margin="0,5,10,0"
                    Grid.Column="12"
                    Grid.ColumnSpan="2"
                    Click="ExitButton_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="#fc0303"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#bd0202"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="75" 
                                    Height="15"
                                    CornerRadius="6"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Text="REGISTRATION"  Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" Margin="0 18 0 0" >

            </TextBlock>
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>

        </StackPanel>

        <TextBox Name="NameBox"  Style="{StaticResource ModernTextBox}" Text="Name" Grid.Row="1" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="SurnameTextBox" Style="{StaticResource ModernTextBox}" Text="Surname" Grid.Row="1" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="EmailTextBox" Style="{StaticResource ModernTextBox}" Text="Email" Grid.Row="2" Grid.Column="1" Width="270" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="PasswordBox"  Style="{StaticResource ModernTextBox}" Text="Password" Grid.Row="3" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.RowSpan="2">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="PasswordAgianTextBox" Style="{StaticResource ModernTextBox}" Text="Confirm password" Grid.Row="3" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>

        <ComboBox Name="GoalComboBox" Height="30" Width="130" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Background="#FF353340">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <TextBlock>Lose weight</TextBlock>
            <TextBlock>Maintain weight</TextBlock>
            <TextBlock>Gain muscle mass</TextBlock>
        </ComboBox>
        <ComboBox Name="LevelComboBox" Height="30" Width="130" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1" Background="Black" >
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <TextBlock>Begginer</TextBlock>
            <TextBlock>Intermadiate</TextBlock>
            <TextBlock>Advanced</TextBlock>
        </ComboBox>
        <Calendar x:Name="BitrhDateDatePicker" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center"  Style="{StaticResource DatePickerCalendarStyle}" 
             
                 Background="#FF353340" OverridesDefaultStyle="False"   AutomationProperties.HelpText="BirthDate">
            
            <Calendar.Effect>
                <DropShadowEffect/>
            </Calendar.Effect>
        </Calendar>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.RowSpan="2">
            <WrapPanel HorizontalAlignment="Center"  >
                <Button x:Name="AvatarButton"  Click="AvatarButton_Click" Background="#FF353340" Foreground="#FFCFCFCF" Content="Load avatar from File...">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </WrapPanel>
            <Image Name="imgDynamicImage" Stretch="Uniform" Grid.RowSpan="2"  Margin="10"/>
        </StackPanel>
        <Button Name="RegisterButton" Background="#FF353340" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Height="30" Width="70" Content="Registration" Foreground="#FFCFCFCD" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
