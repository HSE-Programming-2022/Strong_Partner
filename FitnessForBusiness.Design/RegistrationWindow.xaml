<Window x:Class="FitnessForBusiness.Design.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="700" Width="810">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="1" Grid.ColumnSpan="3" Background="#ab5eeb">



            <TextBlock Text="REGISTRATION"  Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" Margin="0 30 0 0" >

            </TextBlock>
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>

        </StackPanel>

        <TextBox Name="NameBox"  Style="{StaticResource ModernTextBox}" Text="Name"  Grid.Row="1" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="SurnameTextBox" Style="{StaticResource ModernTextBox}" Text="Surname" Grid.Row="1" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="EmailTextBox" Style="{StaticResource ModernTextBox}" Text="Email" Grid.Row="2" Grid.Column="1" Width="270" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="PasswordBox"  Style="{StaticResource ModernTextBox}" Text="Password" Grid.Row="3" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Name="PasswordAgianTextBox" Style="{StaticResource ModernTextBox}" Text="Confirm password" Grid.Row="3" Grid.Column="1" Width="130" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>

        <ComboBox Name="GoalComboBox" Height="30" Width="130" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" Background="{x:Null}">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <TextBlock>Lose weight</TextBlock>
            <TextBlock>Maintain weight</TextBlock>
            <TextBlock>Gain muscle mass</TextBlock>
        </ComboBox>
        <ComboBox Name="LevelComboBox" Height="30" Width="130" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="1" Background="{x:Null}">
            <ComboBox.Effect>
                <DropShadowEffect/>
            </ComboBox.Effect>
            <TextBlock>Begginer</TextBlock>
            <TextBlock>Intermadiate</TextBlock>
            <TextBlock>Advanced</TextBlock>
        </ComboBox>
        <DatePicker x:Name="BitrhDateDatePicker" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom"
             DisplayDateStart="1980/01/01"
                SelectedDate="{Binding Path=B.SzuletesiDatum}" Background="#FF353340">
            <DatePicker.Effect>
                <DropShadowEffect/>
            </DatePicker.Effect>
        </DatePicker>
        <StackPanel Grid.Row="3" Grid.Column="2"  Grid.ColumnSpan="2" >
            <WrapPanel HorizontalAlignment="Center"  >
                <Button x:Name="AvatarButton"  Click="AvatarButton_Click" Background="#FF353340" Foreground="#FFCFCFCF" Content="Load avatar from File...">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </WrapPanel>
            <Image Name="imgDynamicImage" Margin="10" Grid.ColumnSpan="2" />
        </StackPanel>
        <Button Name="RegisterButton" Background="#FF353340" Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" Height="30" Width="70" Content="Registration" Foreground="#FFCFCFCD" Cursor="Hand" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
