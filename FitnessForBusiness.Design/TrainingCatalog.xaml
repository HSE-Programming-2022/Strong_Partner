<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Title="TrainingCatalog" 
        Height="530" Width="920"
        Icon="Pictures/sLogo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>
        <ListBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="7">
            <ListBox.Background>
                <ImageBrush ImageSource="Pictures/background.jpg"/>
            </ListBox.Background>

        </ListBox>
        <Border Name="BorderLineDownStackPanel" Grid.ColumnSpan="2" Background="#FFAB5EEB" VerticalAlignment="Top" Height="30" Grid.Column="0">
            
        </Border>


        <StackPanel Name="IconsStackPanel" 
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Background="#ab5eeb"
                    Height="515">
            
            <Button Name="CatalogButton" 
                    Height="50" Width="50" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    BorderBrush="Black" 
                    Foreground="{x:Null}" 
                    Style="{StaticResource UIButton}" 
                    Margin="0,50,0,0" 
                    FontWeight="Normal">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Catalog2PngPicture.png"/>
                </Button.Background>
            </Button>
            
            <Button Name="SearchButton" Height="50" Width="50"   VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0" RenderTransformOrigin="0.504,0.504" HorizontalAlignment="Center" >

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FindExersicesPngPicture.png"/>
                </Button.Background>
            </Button>
            <Button Name="FavouritesButton" Grid.Row="2" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FavouritesPngPicture.png"/>
                </Button.Background>
            </Button>
            <Button Name="PlusButton" Grid.Row="3" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Plus2PngPicture.png"/>
                </Button.Background>
            </Button>
            <Button Name="ProfileButton" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/ProfilePngPicture.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
