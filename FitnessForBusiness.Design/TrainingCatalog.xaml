<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        xmlns:viewModel="clr-namespace:FitnessForBusiness.Design.MVVM.ViewModel"
        mc:Ignorable="d" 
        Height="527" Width="920"
        Icon="Pictures/sLogo.png"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:CurrentViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>

        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Margin="12"
                        Content="{Binding CurrentView}">
            <ContentControl.Background>
                <ImageBrush ImageSource="Pictures/background.jpg"/>
            </ContentControl.Background>
        </ContentControl>

        <Border Grid.ColumnSpan="2"
                Grid.Row="0"
                Background="#272535"
                MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <Image Width="27"
                           Height="27"
                           Source="/Pictures/sLogo.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <Label Content="Strong Partner"
                           Foreground="Gray"
                           FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,3,5,0">
                    <Button Style="{StaticResource MinimizeButton}"
                            Margin="0,0,0,3.65"
                            Name="MinimizeButton"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowStateButton}"
                            Name="WindowStateButton"
                            Click="WindowStateButton_Click"/>
                    <Button Style="{StaticResource ExitButton}"
                            Name="ExitButton"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <StackPanel Name="IconsStackPanel" 
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Background="#ab5eeb"
                    Height="500">
            
            <Button Name="CatalogButton" 
                    Height="50" Width="50" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    BorderBrush="Black" 
                    Foreground="{x:Null}" 
                    Style="{StaticResource UIButton}" 
                    Margin="0,30,0,0" 
                    FontWeight="Normal">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Catalog2PngPicture.png"/>
                </Button.Background>
            </Button>
            
            <Button Name="SearchButton" Height="50" Width="50"   VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0" RenderTransformOrigin="0.504,0.504" HorizontalAlignment="Center" >

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FindExersicesPngPicture.png"/>
                </Button.Background>
            </Button>
            
            <Button Name="FavouritesButton" Grid.Row="2" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FavouritesPngPicture.png"/>
                </Button.Background>
            </Button>
            
            <Button Name="PlusButton" Grid.Row="3" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Plus2PngPicture.png"/>
                </Button.Background>
            </Button>
            
            <Button Name="ProfileButton" 
                    Height="50" Width="50" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" 
                    Foreground="{x:Null}" 
                    BorderBrush="{x:Null}" 
                    Style="{StaticResource UIButton}" 
                    Margin="0,50,0,0"
                    Command="{Binding ProfileViewCommand}">

                <Button.Background>
                    <ImageBrush ImageSource="Pictures/ProfilePngPicture.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
