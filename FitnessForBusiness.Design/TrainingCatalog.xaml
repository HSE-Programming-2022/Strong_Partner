<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d" 
        Height="527" Width="920"
        MinHeight="527" MinWidth="920"
        MaxHeight="700" MaxWidth="1200"
        Icon="Pictures/sLogo.png"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>

        <Border Grid.ColumnSpan="2"
                Grid.Row="0"
                Background="#272535"
                MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <Image Width="27"
                           Height="27"
                           Source="/Pictures/sLogo.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <Label Content="Strong Partner"
                           Foreground="Gray"
                           FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,3,5,0">
                    <Button Style="{StaticResource MinimizeButton}"
                            Margin="0,0,0,3.65"
                            Name="MinimizeButton"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowStateButton}"
                            Name="WindowStateButton"
                            Click="WindowStateButton_Click"/>
                    <Button Style="{StaticResource ExitButton}"
                            Name="ExitButton"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Name="IconsStackPanel" 
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Background="#ab5eeb"
                    Height="500">

            <RadioButton Name="CatalogButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Explore Workouts"
                         VerticalAlignment="Center"
                         Style="{StaticResource MenuButtonTheme}"
                         FontSize="18"
                         Margin="0,30,0,0"
                         IsChecked="True"/>

            <RadioButton Name="CompletedWorkoutsButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Completed Workouts"
                         Style="{StaticResource MenuButtonTheme}" 
                         FontSize="18"
                         IsChecked="False"/>

            <RadioButton Name="ProfileButton" 
                         Height="50" 
                         Style="{StaticResource MenuButtonTheme}" 
                         Margin="0,280,0,0"
                         FontWeight="Medium"
                         FontSize="18"
                         IsChecked="False"
                         Content="My Profile"/>

            <Button Name="LogOutButton"
                    Height="25"
                    Width="120"
                    Margin="60,10,0,0"
                    Content="Log Out"
                    Style="{StaticResource UIButton}"
                    Click="LogOutButton_Click"/>
        </StackPanel>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Name="TitleTextBlock" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50">Тренировки</TextBlock>
                <Grid Grid.Row="3" HorizontalAlignment="Center" Margin="50 50 50 100" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto">
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Name="BackButton" HorizontalAlignment="Right" Margin="30 0" Padding="15 10" FontSize="18" Style="{StaticResource UIButton}" IsCancel="True" Width="195">Вернуться назад</Button>
                </Grid>

                <ListBox Visibility="Visible" Name="TrainigsListBox" Grid.Row="2" Margin="50 25 50 30" HorizontalAlignment="Center" VerticalContentAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="False" Background="Transparent" BorderBrush="Transparent" MouseLeave="TrainigsListBox_MouseLeave" SelectionChanged="TrainigsListBox_SelectionChanged">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>


                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="260">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="30 30 30 0" Width="200" Height="310" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                    <Border BorderThickness="1.2" BorderBrush="Black">
                                        <Image Name="TrainingImage" Stretch="UniformToFill" Source="/Pictures/san.jpg"></Image>
                                    </Border>
                                </DockPanel>




                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ListBox Visibility="Collapsed" Name="TrainingTypeListBox" Grid.Row="2" Margin="50 0 50 15" HorizontalAlignment="Center" HorizontalContentAlignment="Left" ScrollViewer.CanContentScroll="False" Background="Transparent" BorderBrush="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Margin="0 20 30 0" Name="LevelTextBlock" TextWrapping="Wrap" FontFamily="Calibri" FontSize="22" Initialized="LevelTextBlock_Initialized"></TextBlock>
                                <TextBlock Margin="0 8 30 25" Grid.Row="1" Name="NameTextBlock" TextWrapping="Wrap" FontFamily="Segoe Print" FontSize="16" Initialized="NameTextBlock_Initialized"></TextBlock>

                                <ListBox Name="Trainings2ListBox" Grid.Column="1" Grid.RowSpan="2" Margin="10 10 0 25" HorizontalContentAlignment="Left" ScrollViewer.CanContentScroll="False" Background="Transparent" BorderBrush="Transparent" Initialized="Trainings2ListBox_Initialized">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Margin="10 10 30 25" Name="LevelTextBlock" FontFamily="Calibri" FontSize="19" Initialized="LevelTextBlock_Initialized_2"></TextBlock>

                                                <ListBox Name="ExercisesListBox" Grid.Column="1" Margin="10 0 0 10" VerticalContentAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="False" Background="Transparent" BorderBrush="Transparent" PreviewMouseWheel="ExercisesListBox_PreviewMouseWheel" Initialized="ExercisesListBox_Initialized">
                                                    <ListBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"></StackPanel>
                                                        </ItemsPanelTemplate>
                                                    </ListBox.ItemsPanel>

                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <Button Name="Begin" Margin="15 0 15 10" Padding="12 8" FontSize="16" Style="{StaticResource UIButton}" Initialized="Begin_Initialized"  Click="Begin_Click"></Button>

                                                                <TextBlock Grid.Row="1" Margin="10 0 10 0" Name="ExerciseAmountTextBlock" HorizontalAlignment="Center" FontSize="18" Initialized="ExerciseAmountTextBlock_Initialized"></TextBlock>
                                                                <TextBlock Grid.Row="1" Margin="10 20 10 0" Name="LevelTextBlock" HorizontalAlignment="Center" FontSize="18" Initialized="LevelTextBlock_Initialized_1"></TextBlock>

                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Row="1" Margin="100 30" Name="TraineGrid" MaxWidth="1425" Visibility="Collapsed">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Margin="0 0 25 0" Width="500" Height="300" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Border BorderThickness="1.2" BorderBrush="#FF715C4E">
                            <Image Name="FilmPosterHorizontalImage" Stretch="UniformToFill" Source="/Pictures/san.jpg"></Image>
                        </Border>
                    </DockPanel>

                    <Grid Grid.Column="1" Margin="25 0 0 0" MaxWidth="650" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>




                    </Grid>

                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Calibri" FontSize="25" Margin="0 80 0 0">Виды тренировок</TextBlock>
                </Grid>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
