<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d"
        Title="TrainingCatalog" 
        Height="500" Width="800"
        Icon="Pictures/sLogo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>
        <ListBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Grid.ColumnSpan="7">
            <ListBox.Background>
                <ImageBrush ImageSource="Pictures/background.jpg"/>
            </ListBox.Background>

        </ListBox>
        <StackPanel Name="BorderLineDownStackPanel" Grid.ColumnSpan="8" Background="#FFAB5EEB" VerticalAlignment="Top" Orientation="Horizontal" MinHeight="30" Grid.Column="1">
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
        </StackPanel>
        <StackPanel Name="BorderLineUpStackPanel" Grid.ColumnSpan="8" Background="#FFAB5EEB" VerticalAlignment="Bottom" Orientation="Horizontal" MinHeight="30" Grid.Row="5">
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
        </StackPanel>
        <StackPanel x:Name="IconsStackPanel" Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="1" Background="#ab5eeb">
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
            <Button x:Name="CatalogButton" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" Foreground="{x:Null}" Style="{StaticResource UIButton}" Margin="0,20,0,0" FontWeight="Normal"  >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Catalog2PngPicture.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="SearchButton" Height="50" Width="50"   VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,50,0,0" RenderTransformOrigin="0.504,0.504" HorizontalAlignment="Center" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FindExersicesPngPicture.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="FavouritesButton" Grid.Row="2" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,40,0,0">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="Pictures/FavouritesPngPicture.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="PlusButton" Grid.Row="3" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource UIButton}" Margin="0,45,0,0">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="Pictures/Plus2PngPicture.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="ProfileButton" Grid.Row="4" Height="50" Width="50"   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Style="{DynamicResource UIButton}" Margin="0,45,0,0">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <Button.Background>
                    <ImageBrush ImageSource="Pictures/ProfilePngPicture.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
       
    </Grid>
</Window>
