<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        mc:Ignorable="d" 
        Height="527" Width="920"
        MinHeight="527" MinWidth="920"
        MaxHeight="700" MaxWidth="1200"
        Icon="Pictures/sLogo.png"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>

        <Border Grid.ColumnSpan="2"
                Grid.Row="0"
                Background="#272535"
                MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <Image Width="27"
                           Height="27"
                           Source="/Pictures/sLogo.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <Label Content="Strong Partner"
                           Foreground="Gray"
                           FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,3,5,0">
                    <Button Style="{StaticResource MinimizeButton}"
                            Margin="0,0,0,3.65"
                            Name="MinimizeButton"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowStateButton}"
                            Name="WindowStateButton"
                            Click="WindowStateButton_Click"/>
                    <Button Style="{StaticResource ExitButton}"
                            Name="ExitButton"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Name="IconsStackPanel" 
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Background="#ab5eeb"
                    Height="500">

            <RadioButton Name="CatalogButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Explore Workouts"
                         VerticalAlignment="Center"
                         Style="{StaticResource MenuButtonTheme}"
                         FontSize="18"
                         Margin="0,30,0,0"
                         IsChecked="True"
                         Click="CatalogButton_Click"/>

            <RadioButton Name="CompletedWorkoutsButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Completed Workouts"
                         Style="{StaticResource MenuButtonTheme}" 
                         FontSize="18"
                         IsChecked="False"
                         Click="CompletedWorkoutsButton_Click"/>

            <RadioButton Name="ProfileButton" 
                         Height="50" 
                         Style="{StaticResource MenuButtonTheme}" 
                         Margin="0,280,0,0"
                         FontWeight="Medium"
                         FontSize="18"
                         IsChecked="False"
                         Content="My Profile"
                         Click="ProfileButton_Click"
                         />

            <Button Name="LogOutButton"
                    Height="25"
                    Width="120"
                    Margin="60,10,0,0"
                    Content="Log Out"
                    Style="{StaticResource UIButton}"
                    Click="LogOutButton_Click"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1"
                      Grid.Column="1">
            <StackPanel Name="TypesPanel"
                        Margin="50 25 50 30"
                        Visibility="Visible">
                <ListBox Name="TypesListBox"
                         Grid.Row="2"
                         HorizontalAlignment="Center"
                         VerticalContentAlignment="Top" 
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                         ScrollViewer.CanContentScroll="False" 
                         Background="Transparent" 
                         BorderBrush="Transparent" 
                         MouseLeave="TypesListBox_MouseLeave"
                         SelectionChanged="TypesListBox_SelectionChanged">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"></StackPanel>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="260">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="30 30 30 0" Width="200" Height="310" 
                                           VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                    <Border BorderThickness="1.2" BorderBrush="Black">
                                        <Image Name="TypeImage" Stretch="UniformToFill" 
                                               Initialized="TypeImage_Initialized"></Image>
                                    </Border>
                                </DockPanel>

                                <TextBlock Name="TrainingTypeTextBlock"
                                           Grid.Row="2" Margin="10 10 10 25" 
                                           TextWrapping="Wrap" TextAlignment="Center" 
                                           HorizontalAlignment="Center" FontSize="22"
                                           Initialized="TrainingTypeTextBlock_Initialized"></TextBlock>


                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </StackPanel>


        </ScrollViewer>
        <ScrollViewer Grid.Row="1"
                      Grid.Column="1">
            <StackPanel Name="CurrentTypeImagePanel" 
                        Visibility="Collapsed" >
             <TextBlock Name="CurrentTypeTextBlock" 
                        Initialized="CurrentTypeTextBlock_Initialized" 
                        FontSize="22"></TextBlock>
                <Image Name="CurrentTypeImage" 
                       Stretch="UniformToFill" 
                       Margin=" 0 10 0 0"                                              
                       Initialized="CurrentTypeImage_Initialized"></Image>
                
            <StackPanel Name="LevelPanel" 
                         Grid.Row="2" Margin="50 0 50 15" 
                         HorizontalAlignment="Left" 
                         ScrollViewer.CanContentScroll="False" 
                         Background="Transparent"
                            Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0 20 30 0"
                                   Name="EasyTextBlock" 
                                   Text="Beginner"
                                   TextWrapping="Wrap" 
                                   FontFamily="Calibri" 
                                   FontSize="22"></TextBlock>
                        <ListBox Name="BeginnerTrainingsListBox"
                                 Margin="20 0 0 0" 
                                 HorizontalContentAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="Transparent">
                            <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Name="TrainingNameTextBlock" 
                                                       Initialized="TrainingNameTextBlock_Initialized"
                                                       FontFamily="Calibri"
                                                       FontSize="22" />
                                        <StackPanel Orientation="Vertical" Margin="15 0 0 0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Name="BeginButton"  
                                                        Padding="12 8" 
                                                        FontSize="16" 
                                                        Style="{StaticResource UIButton}" 
                                                        Initialized="BeginButton_Initialized"  
                                                        Click="BeginButton_Click"></Button>
                                                <TextBlock Margin="5 0 0 0"
                                                               Name="BeginTrainingTimeTextBlock"
                                                               FontSize="12"
                                                               Initialized="BeginTrainingTimeTextBlock_Initialized"
                                                               />
                                                </StackPanel>
                                                <TextBlock Margin="0 5 0 0"
                                                   Name="EquipmentTextBlock" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="EquipmentTextBlock_Initialized"
                                                   TextWrapping="Wrap"/>
                                            <TextBlock Margin="0 5 0 0"
                                                   Name="BodyPartsTextBlock" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="BodyPartsTextBlock_Initialized"
                                                   TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0 20 30 0" Name="IntermediateTextBlock" Text="Intermediate" TextWrapping="Wrap" FontFamily="Calibri" FontSize="22"></TextBlock>
                    <ListBox Name="IntermediateTrainingsListBox"
                                 Margin="20 0 0 0" 
                                 HorizontalContentAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="Transparent" 
                                 Initialized="IntermediateTrainingsListBox_Initialized">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Name="IntermediateTrainingNameTextBlock" 
                                                       Initialized="IntermediateTrainingNameTextBlock_Initialized"
                                                       FontFamily="Calibri"
                                                       FontSize="22" 
                                                       />
                                        <StackPanel Orientation="Vertical" Margin="15 0 0 0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Button x:Name="IntermediateBeginButton"
                                                        Padding="12 8" 
                                                        FontSize="16" 
                                                        Style="{StaticResource UIButton}" 
                                                        Initialized="IntermediateBeginButton_Initialized"  
                                                        Click="IntermediateBeginButton_Click"></Button>
                                                    <TextBlock Margin="5 0 0 0"
                                                               Name="IntTrainingTimeTextBlock"
                                                               FontSize="12"
                                                               Initialized="IntTrainingTimeTextBlock_Initialized"
                                                               />
                                                </StackPanel>
                                                <TextBlock Margin="0 5 0 0"
                                                   Name="InterEquipment" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="InterEquipment_Initialized"
                                                   TextWrapping="Wrap"/>
                                            <TextBlock Margin="0 5 0 0"
                                                   Name="IntBodyPartsTextBlock" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="IntBodyPartsTextBlock_Initialized"
                                                   TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0 20 30 0" Name="HardTextBlock" Text="Advanced" TextWrapping="Wrap" FontFamily="Calibri" FontSize="22"></TextBlock>
                    <ListBox Name="AdvTrainingsListBox"
                                 Margin="20 0 0 0" 
                                 HorizontalContentAlignment="Left"
                                 Background="Transparent"
                                 BorderBrush="Transparent" 
                                 Initialized="AdvTrainingsListBox_Initialized">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Name="AdvTrainingNameTextBlock" 
                                                       Initialized="AdvTrainingNameTextBlock_Initialized"
                                                       FontFamily="Calibri"
                                                       FontSize="22" 
                                                       />
                                        <StackPanel Orientation="Vertical" Margin="15 0 0 0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Name="AdvBeginButton"  
                                                        Padding="12 8" 
                                                        FontSize="16" 
                                                        Style="{StaticResource UIButton}" 
                                                        Initialized="AdvBeginButton_Initialized"  
                                                        Click="AdvBeginButton_Click"></Button>
                                                <TextBlock Margin="5 0 0 0"
                                                               Name="AdvTrainingTimeTextBlock"
                                                               FontSize="12"
                                                               Initialized="AdvTrainingTimeTextBlock_Initialized"
                                                               />
                                                </StackPanel>
                                                <TextBlock Margin="0 5 0 0"
                                                   Name="AdvEquipmentTextBlock" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="AdvEquipmentTextBlock_Initialized"
                                                   TextWrapping="Wrap"/>
                                            <TextBlock Margin="0 5 0 0"
                                                   Name="AdvBodyPartsTextBlock" 
                                                   FontFamily="Calibri"
                                                   FontSize="12" 
                                                   Initialized="AdvBodyPartsTextBlock_Initialized"
                                                   TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
                <Button x:Name="GetBackToTypesButton" 
                        Content="Back"
                        Style="{StaticResource UIButton}" 
                        Margin="0 30 0 0" Click="GetBackToTypesButton_Click"/>
            </StackPanel>
        </ScrollViewer>




        <StackPanel Orientation="Horizontal"
                            Visibility="Collapsed"
                            MinWidth="696"
                            MinHeight="496"
                            x:Name="ProfilePanel">
                <StackPanel Margin="120,40,0,0"
                                Orientation="Vertical">
                    <Image Width="150"
                               Height="150"
                               Name="UserAvatar"
                               Initialized="UserAvatar_Initialized"/>

                    <StackPanel Orientation="Horizontal"
                                    Margin="0,5,0,0">
                        <TextBlock Name="UsernameNameTextBox"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="#ab5eeb"
                                       Initialized="UsernameNameTextBox_Initialized"/>

                        <TextBlock Name="UserSurnameTextBox"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Foreground="#ab5eeb"
                                       Margin="5,0,0,0"
                                       Initialized="UserSurnameTextBox_Initialized"/>
                    </StackPanel>

                    <TextBlock Name="UserLevelTextBox"
                                   FontWeight="Medium"
                                   FontSize="16"
                                   Foreground="#ab5eeb"
                                   Margin="0,10,0,0"
                                   Initialized="UserLevelTextBox_Initialized"/>

                    <TextBlock Name="UserGoalComboBox"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="#ab5eeb"
                                   Margin="0,10,0,0"
                                   Initialized="UserGoalComboBox_Initialized"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                                Margin="90,40,0,0">
                    <StackPanel Orientation="Vertical">
                        <Label Content="New Avatar"
                                   Margin="55,0,0,0"
                                   Foreground="#ab5eeb"
                                   FontSize="16"
                                   FontWeight="Medium"/>
                        <ComboBox Name="ChangeAvatarComboBox"
                                      Width="150"
                                      Height="130">
                            <ComboBoxItem>
                                <Image Source="/Pictures/san.jpg"
                                           Width="120"
                                           Height="120"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Image Source="/Pictures/suboch.jpg"
                                           Width="120"
                                           Height="120"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Image Source="/Pictures/becl2.jpg"
                                           Width="120"
                                           Height="120"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <Image Source="/Pictures/lom2.jpg"
                                           Width="120"
                                           Height="120"/>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                    Margin="0,20,0,0">
                        <ComboBox Name="ChangeGoalComboBox"
                                      Width="130"
                                      Height="30"
                                      Text="My New Goal"
                                      IsEditable="True"
                                      VerticalContentAlignment="Center">
                            <TextBlock>Lose weight</TextBlock>
                            <TextBlock>Maintain weight</TextBlock>
                            <TextBlock>Gain muscle mass</TextBlock>
                        </ComboBox>

                        <ComboBox Name="ChangeLevelComboBox"
                                      Width="130"
                                      Height="30"
                                      Margin="5,0,0,0"
                                      Text="My New Level"
                                      IsEditable="True"
                                      VerticalContentAlignment="Center">
                            <TextBlock>Beginner</TextBlock>
                            <TextBlock>Intermediate</TextBlock>
                            <TextBlock>Advanced</TextBlock>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <Label Content="New Login"
                                       HorizontalContentAlignment="Right"
                                       Foreground="#ab5eeb"
                                       FontWeight="Medium"
                                       FontSize="16"
                                       Margin="0,5,0,0"/>

                            <TextBlock Text="New Password"
                                           Foreground="#ab5eeb"
                                           FontWeight="Medium"
                                           FontSize="16"
                                           Margin="0,15,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical"
                                        Margin="10,8,0,0">
                            <TextBox Name="ChangeUsernameBox"
                                         Style="{StaticResource UITextBox}"
                                         Width="150"
                                         Height="20"/>

                            <Border Width="150"
                                        Margin="0,5,0,0"
                                        Style="{StaticResource Borderline}"/>

                            <PasswordBox Name="ChangePasswordBox"
                                             Margin="0,15,0,0"
                                             Style="{StaticResource PassBox}"
                                             Width="150"
                                             Height="20"/>

                            <Border Width="150"
                                        Margin="0,0,0,0"
                                        Style="{StaticResource Borderline}"/>

                        </StackPanel>
                    </StackPanel>

                    <Button Width="120"
                                Height="30"
                                Style="{StaticResource UIButton}"
                                Margin="0,20,0,0"
                                Content="Save Changes"
                                Name="SaveChangesButton"
                                Click="SaveChangesButton_Click"/>
                </StackPanel>
            </StackPanel>

    </Grid>
</Window>
