<Window x:Class="FitnessForBusiness.Design.TrainingCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessForBusiness.Design"
        xmlns:viewModel="clr-namespace:FitnessForBusiness.Design.MVVM.ViewModel"
        mc:Ignorable="d" 
        Height="527" Width="920"
        MinHeight="527" MinWidth="920"
        MaxHeight="700" MaxWidth="1200"
        Icon="Pictures/sLogo.png"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/background.jpg"/>
        </Grid.Background>

        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Margin="12"
                        Content="{Binding CurrentView}"/>

        <Border Grid.ColumnSpan="2"
                Grid.Row="0"
                Background="#272535"
                MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <Image Width="27"
                           Height="27"
                           Source="/Pictures/sLogo.png"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <Label Content="Strong Partner"
                           Foreground="Gray"
                           FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,3,5,0">
                    <Button Style="{StaticResource MinimizeButton}"
                            Margin="0,0,0,3.65"
                            Name="MinimizeButton"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowStateButton}"
                            Name="WindowStateButton"
                            Click="WindowStateButton_Click"/>
                    <Button Style="{StaticResource ExitButton}"
                            Name="ExitButton"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Name="IconsStackPanel" 
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Background="#ab5eeb"
                    Height="500">

            <RadioButton Name="CatalogButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Explore Workouts"
                         VerticalAlignment="Center"
                         Style="{StaticResource MenuButtonTheme}"
                         FontSize="18"
                         Margin="0,30,0,0"
                         IsChecked="True"
                         Command="{Binding AllWorkoutsViewCommand}"/>

            <RadioButton Name="CompletedWorkoutsButton" 
                         Height="50"
                         FontWeight="Medium"
                         Content="Completed Workouts"
                         Style="{StaticResource MenuButtonTheme}" 
                         FontSize="18"
                         IsChecked="False"
                         Command="{Binding CompletedWorkoutsCommand}"/>

            <RadioButton Name="ProfileButton" 
                         Height="50" 
                         Style="{StaticResource MenuButtonTheme}" 
                         Margin="0,280,0,0"
                         FontWeight="Medium"
                         FontSize="18"
                         IsChecked="False"
                         Content="My Profile"
                         Command="{Binding ProfileViewCommand}"/>

            <Button Name="LogOutButton"
                    Height="25"
                    Width="120"
                    Margin="60,10,0,0"
                    Content="Log Out"
                    Style="{StaticResource UIButton}"
                    Click="LogOutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
